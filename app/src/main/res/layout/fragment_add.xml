<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_16dp"
    tools:context=".fragment.AddFragment">

    <TextView
        android:id="@+id/add_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_16dp"
        android:gravity="center_vertical"
        android:text="Add Post"
        android:textSize="@dimen/text_16sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/add_photo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="@dimen/spacing_6dp"
        android:background="#A6A6A6" />

    <TextView
        android:id="@+id/add_reel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_16dp"
        android:gravity="center_vertical"
        android:text="Add Reel"
        android:textSize="@dimen/text_16sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_reel" />

</LinearLayout>